<!-- src/layouts/Layout.astro -->

---
// The import now lives INSIDE the code fence, where it will be executed.
import '../styles/global.css';
import Header from '../components/Header.astro';
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="StorySmith: We transform wisdom into a sacred, lasting asset." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>StorySmith</title>

        <!-- Google Fonts Import -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Playfair+Display:wght@700&family=Roboto+Mono:wght@400;700&display=swap" rel="stylesheet">
    </head>
    <body class="bg-warm-parchment text-brand-black font-open-sauce">
        <Header />
        <slot />

        <!-- Footer -->
        <footer class="bg-brand-black text-brand-white py-16">
            <div class="container mx-auto px-6 max-w-7xl">
                <!-- Main Footer Content: Three Columns -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">

                    <!-- Column 1: Brand & Mission -->
                    <div>
                        <img src="/alt-logo.png" alt="StorySmith" class="h-12 mb-6" />
                        <p class="text-brand-white/80 leading-relaxed mb-6">
                            Preserving stories with integrity. We transform your voice and vision into a legacy that lasts.
                        </p>
                        <a href="https://www.linkedin.com/in/lianpassmore" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-brand-white hover:text-brand-lime transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                            </svg>
                            <span>LinkedIn</span>
                        </a>
                    </div>

                    <!-- Column 2: Services -->
                    <div>
                        <h3 class="font-sans font-bold text-lg mb-6 uppercase tracking-wider">Our Services</h3>
                        <ul class="space-y-3">
                            <li>
                                <a href="/legacy" class="text-brand-white/70 hover:text-brand-white transition-colors">
                                    The Spoken Legacy
                                </a>
                            </li>
                            <li>
                                <a href="/premium" class="text-brand-white/70 hover:text-brand-white transition-colors">
                                    Premium Podcast Production
                                </a>
                            </li>
                            <li>
                                <a href="/#offers" class="text-brand-white/70 hover:text-brand-white transition-colors">
                                    Our Philosophy
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Column 3: Connect -->
                    <div>
                        <h3 class="font-sans font-bold text-lg mb-6 uppercase tracking-wider">Get in Touch</h3>
                        <ul class="space-y-3 text-brand-white/70">
                            <li>
                                <a href="/contact" class="hover:text-brand-white transition-colors">
                                    Contact Us
                                </a>
                            </li>
                            <li>
                                <a href="mailto:hello@storysmith.work" class="hover:text-brand-white transition-colors">
                                    hello@storysmith.work
                                </a>
                            </li>
                            <li>
                                <a href="tel:+6427566803" class="hover:text-brand-white transition-colors">
                                    +64 27 566 8803
                                </a>
                            </li>
                            <li class="text-brand-white/60">
                                WhangƒÅrei, Aotearoa New Zealand
                            </li>
                        </ul>
                    </div>

                </div>

                <!-- Bottom Bar -->
                <div class="pt-8 border-t border-brand-white/10">
                    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-brand-white/60">
                        <p>&copy; 2025 StorySmith. All rights reserved.</p>
                        <div class="flex gap-6">
                            <a href="/terms" class="hover:text-brand-white transition-colors">Terms of Service</a>
                            <a href="/privacy" class="hover:text-brand-white transition-colors">Privacy Policy</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>